set winBounds to desktopBounds()tell application "Terminal"	if not running then		run		delay 0.25	end if	activate	set bounds of front window to winBounds		tell application "Terminal"		activate		tell front window			if busy = false then				set shCMD to "vim"				do script shCMD in selected tab			end if		end tell	end tell	end tellon desktopBounds()	tell application "Finder"		set _bnds to bounds of window of desktop		return _bnds	end tellend desktopBounds